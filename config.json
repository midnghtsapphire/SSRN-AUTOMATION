{
  "system_name": "SSRN Paper Automation System",
  "version": "1.0.0",
  "author": {
    "name": "Audrey Evans",
    "orcid": "0009-0005-0663-7832",
    "email": "angelreporters@gmail.com",
    "affiliation": "Independent Researcher"
  },
  "naming_convention": {
    "format": "Walter_Evans_[ShortTitle]_[YYYYMMDD].pdf",
    "mandatory_prefix": "Walter_Evans_",
    "date_format": "YYYYMMDD",
    "example": "Walter_Evans_Quantum_Cognition_20260123.pdf"
  },
  "quality_requirements": {
    "abstract_max_words": 200,
    "no_ai_watermarks": true,
    "no_author_in_body": true,
    "human_voice_required": true,
    "required_sections": [
      "Abstract",
      "Introduction",
      "Methodology",
      "Analysis",
      "Conclusion",
      "Keywords",
      "JEL Codes"
    ],
    "forbidden_terms": [
      "manus",
      "ai-generated",
      "artificial intelligence generated",
      "automated",
      "auto-generated",
      "machine learning model",
      "language model",
      "gpt",
      "chatgpt",
      "claude",
      "generated by",
      "ai assistant",
      "ai watermark"
    ]
  },
  "metadata_requirements": {
    "required_fields": [
      "author",
      "title",
      "description",
      "date",
      "keywords",
      "jel_codes"
    ],
    "seo_optimized": true,
    "clean_metadata_only": true
  },
  "google_drive": {
    "folder_id": "1qVmicFsMOLngIoRIAkeVZNreVblXbLic",
    "config_path": "/home/ubuntu/.gdrive-rclone.ini",
    "remote_name": "manus_google_drive"
  },
  "github": {
    "repository": "midnghtsapphire/SSRN-AUTOMATION",
    "local_path": "/home/ubuntu/SSRN-AUTOMATION",
    "papers_directory": "output",
    "store_papers_in_repo": false,
    "private": true,
    "note": "Papers stored in output/ directory but not committed to GitHub (see .gitignore)"
  },
  "paper_generation": {
    "model": "gpt-4.1-mini",
    "temperature": 0.7,
    "use_contra_titles": true,
    "human_voice_enforcement": true,
    "remove_ai_artifacts": true
  },
  "notifications": {
    "email": "angelreporters@gmail.com",
    "send_email": true,
    "create_calendar_event": true,
    "mcp_servers": {
      "gmail": "gmail",
      "google_calendar": "google-calendar"
    }
  },
  "workflow_steps": [
    "1. Generate paper content with human voice",
    "2. Create PDF with proper formatting",
    "3. Run quality checker validation",
    "4. Extract metadata and generate CSV",
    "5. Upload to Google Drive",
    "6. Send notifications (email + calendar)",
    "7. Store paper in output/ directory (not committed to GitHub)"
  ],
  "best_practices": [
    "Always run quality checker before finalizing",
    "Ensure abstract is â‰¤200 words",
    "Use contra-suggestive titles (opposing concepts)",
    "No author name in body text",
    "All papers backed up to both Google Drive AND GitHub",
    "Verify filename starts with Walter_Evans_",
    "Remove all AI watermarks and artifacts",
    "Write in authentic human academic voice",
    "Use SEO-optimized keywords",
    "Include JEL codes and eJournal suggestions"
  ]
}
